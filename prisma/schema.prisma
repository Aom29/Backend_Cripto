generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}
  
// =======================
// Modelo Account
// =======================
model User {
  id Int      @id @default(autoincrement())
  name       String   
  lastname   String   
  email      String   @unique                     
  password   String                               
  email_validated Boolean @default(false)     
  created_at DateTime @default(now())            
}